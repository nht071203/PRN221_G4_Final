@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@inject PRN221_BusinessLogic.Interface.INewsService _newsService
@inject PRN221_BusinessLogic.Interface.IAccountService _acccountService

@{
    IEnumerable<PRN221_Models.Models.CategoryNews> categories;
    var isLoggedIn = HttpContextAccessor.HttpContext.Session.GetString("UserSession") != null;
    categories = await _newsService.GetCategoriesHaveNews();
    int? getIdAccount = null;
    if (HttpContextAccessor.HttpContext.Session.GetString("AccountID") != null)
    {
        getIdAccount = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetInt32("AccountID"));
    }
    PRN221_Models.Models.Account getAcc = null;
    if (getIdAccount.HasValue)
    {
        // Retrieve the account based on the account ID
        getAcc = await _acccountService.GetByIdAccount(getIdAccount.Value);
    }
}

