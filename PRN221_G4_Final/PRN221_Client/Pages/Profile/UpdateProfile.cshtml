@page
@model PRN221_Client.Pages.Profile.UpdateProfileModel
@{
    // ViewData["Title"] = Model.Profile.FullName;
}

<div class="row">
    <form method="post">
        <div class="col-lg-4 p-4">
            <div class="card p-5">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Model.Profile.Avatar" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                    <div class="mt-3">
                        <h4>@Model.Profile.FullName</h4>
                        @if (Model.Profile.ShortBio != null && Model.Profile.ShortBio != "N/A")
                        {
                            <p class="text-secondary mb-1">@Model.Profile.ShortBio</p>
                        }
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.Profile.Major != null && Model.Profile.Major != "N/A")
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i>Major</h6>
                            <span class="text-secondary">@Model.Profile.Major</span>
                        </li>
                    }
                    @if (Model.Profile.Address != null && Model.Profile.Address != "N/A")
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i>Address</h6>
                            <span class="text-secondary">@Model.Profile.Address</span>
                        </li>
                    }
                    @if (Model.Profile.DateOfBirth != null)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i>Date Of Birth</h6>
                            <span class="text-secondary">@Model.Profile.DateOfBirth.Value.ToString("MMMM dd, yyyy")</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-8 p-4">
            <div class="card p-5">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.FullName">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Username</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.Username" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.Email" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.Phone" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Short Bio</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.ShortBio">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.Address">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Major</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.Major">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Gender</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <select asp-for="Profile.Gender" class="form-control">
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Date Of Birth</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.DateOfBirth">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Year Of Experience</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.YearOfExperience">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Education Url</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.EducationUrl">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Degree Url</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" asp-for="Profile.DegreeUrl">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 text-secondary">
                        <button class="btn btn-success">Update</button>
                        <a class="btn btn-success" asp-page="/Profile/ChangePassword" asp-route-id="@Model.Profile.AccountId">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
