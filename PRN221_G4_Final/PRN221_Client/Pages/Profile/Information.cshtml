@page "/Profile/Information/{id:int}"
@model PRN221_Client.Pages.Profile.InformationModel
@{
    ViewData["Title"] = Model.Profile.FullName;
}

<div class="row">
    <form>
        <div class="col-lg-4 p-4">
            <div class="card p-5">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Model.Profile.Avatar" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                    <div class="mt-3">
                        <h4>@Model.Profile.FullName</h4>
                        @if (Model.Profile.ShortBio != null && Model.Profile.ShortBio != "N/A")
                        {
                            <p class="text-secondary mb-1">@Model.Profile.ShortBio</p>
                        }
                    </div>
                </div>
                <hr class="my-4">
                <ul class="list-group list-group-flush">
                    @if (Model.Profile.Major != null && Model.Profile.Major != "N/A")
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i>Major</h6>
                            <span class="text-secondary">@Model.Profile.Major</span>
                        </li>
                    }
                    @if (Model.Profile.Address != null && Model.Profile.Address != "N/A")
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i>Address</h6>
                            <span class="text-secondary">@Model.Profile.Address</span>
                        </li>
                    }
                    @if (Model.Profile.DateOfBirth != null)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i>Date Of Birth</h6>
                            <span class="text-secondary">@Model.Profile.DateOfBirth.Value.ToString("MMMM dd, yyyy")</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-8 p-4">
            <div class="card p-5">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.FullName" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.Email" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.Phone" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Gender</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.Gender" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Year Of Experience</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.YearOfExperience" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Education Url</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.EducationUrl" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Degree Url</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <input type="text" class="form-control" value="@Model.Profile.DegreeUrl" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 text-secondary">
                        <a class="btn btn-primary" asp-page="/Profile/UpdateProfile" asp-route-id="@Model.Profile.AccountId">Update Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
