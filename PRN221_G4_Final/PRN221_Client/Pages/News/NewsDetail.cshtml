                            <div class="row AdjustRow" style="position: relative; height: 499.35px;">
                                @foreach (var news in Model.List2News)
                                {
                                    <div class="col-md-6 pb--30" style="position: absolute; left: 0px; top: 0px;">
                                        <!-- Post Item Start -->
                                        <div class="post--item">
                                            <!-- Post Image Start -->
                                            <div class="post--img">
                                                <a asp-page="/News/NewsDetail" asp-route-id="@news.NewsId">
                                                    <img src="@news.ImageUrl" alt="" style="width: 100%;height: 200px;object-fit: cover;">
                                                </a>
                                            </div>

                                            <!-- Post Image End -->
                                            <!-- Post Info Start -->
                                            <div class="post--info">
                                                <!-- Post Meta Start -->
                                                <div class="post--meta">
                                                    <ul class="nav">
                                                        <li>
                                                            <a href="" style="cursor: text">
                                                                <img src="~/image/logo.jpg" alt="">
                                                                <span>Farm Family</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="" style="cursor: text">
                                                                <i class="mr--8 fa fa-calendar-o"></i>
                                                                <span>@news.CreatedAt</span>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <!-- Post Meta End -->
                                                <!-- Post Title Start -->
                                                <div class="post--title mt--10">
                                                    <h3 class="h6">
                                                        <a href="" class="btn-link">
                                                            @news.Title
                                                        </a>
                                                    </h3>
                                                </div>
                                                <!-- Post Title End -->
                                                <!-- Post Meta Start -->
                                                <div class="post--meta">
                                                    <ul class="nav">
                                                        <li>
                                                            <i class="mr--8 fa fa-folder-open-o"></i>

                                                            <a asp-page="/News/NewsList" asp-route-id="@news.CategoryNewsId"><span>Category bài viết</span></a>
                                                        </li>
                                                    </ul>
                                                </div>
