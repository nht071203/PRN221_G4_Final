<Page x:Class="PRN221_Admin.ThongKePost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRN221_Admin"
          xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThongKePost">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="421*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Label Content="Total News" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#FF37AF31" FontWeight="Bold" FontStyle="Italic"/>
        <Label Content="Total Farmer" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Foreground="#FF003FC8" FontWeight="Bold" FontStyle="Italic"/>
        <Label Content="Total Farmer" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top" Foreground="#FF4400FF" FontWeight="Bold" FontStyle="Italic"/>
        <Label Content="Total Post" HorizontalAlignment="Left" Margin="450,10,0,0" VerticalAlignment="Top" Foreground="#FFF40000" FontWeight="Bold" FontStyle="Italic"/>

        <!-- TextBlocks for values -->
        <TextBlock Text="{Binding TotalNewsCount}" HorizontalAlignment="Left" Margin="32,30,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <TextBlock Text="{Binding TotalFarmerCount}" HorizontalAlignment="Left" Margin="182,30,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="332,30,0,0"  VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="482,30,0,0"  VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>

        <oxy:PlotView x:Name="plotView"
                 Model="{Binding PlotModel}"
                 Margin="0,70,0,0" Grid.RowSpan="3" />

        <Button Content="Thống kê" HorizontalAlignment="Left" Margin="575,13,0,0" VerticalAlignment="Top" Height="20" Width="58" Background="#FF9BF4FF" FontWeight="Bold" FontStyle="Italic" FontFamily="Arial" RenderTransformOrigin="0,0"/>
    </Grid>
</Page>
